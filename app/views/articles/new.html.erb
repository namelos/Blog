<h1>New Article</h1>

<%= form_for :article, url: articles_path do |f| %>
  <% if @article.errors.any? %>
    <h2>
      <%= pluralize(@article.errors.count, 'error') %>prohibited
    </h2>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %><br/>
    <%= f.text_field :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
